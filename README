NAME
    TAP::Tree - Simple TAP (Test Anything Protocol) parser

SYNOPSIS
      use v5.10.1;
      require TAP::Tree;
      my $tap = <<'END';
      ok 1 - test 1
      ok 2 - test 2
      1..2
      END

      my $tap  = TAP::Tree->new( tap_ref => \$tap );
      my $tree = $tap->parse;
      say $tree->{plan}{number};   # print 2
      say $tree->{testline}[0]{description}; # print test 1
      say $tree->{testline}[1]{description}; # print test 2

